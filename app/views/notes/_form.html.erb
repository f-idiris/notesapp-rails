<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



 <div class="field form-group">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class:"form-control", placeholder:"Note Title" %>
  </div>

  <div class="field form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class:"form-control" %>
  </div>

  <div class="field form-group">
      <%= form.label :full_content, style: "display: block" %>
      <!--  <%= form.text_area :full_content, class:"form-control"%> -->
      <%= form.rich_text_area :full_content%>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :note_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>


  <!-- <%= form.text_area :full_content, class:"form-control"%> <%= form.label :full_content, style: "display: block" %> -->

  <br/>
  <div class="actions">
    <%= form.submit class:'btn btn-secondary'%>
  </div>
<% end %>
